CC=cl
EXENAMEFLAG=-Fe
PERL_DIR=e:\GVN\Perl
SRC_DIR=..\src\

CFLAGS=-nologo -Zp1 -O2 -c -I..\.. -I..\h -I"$(PERL_DIR)\lib\core"

LIBS= ..\..\fidoconf\fconfmvc.lib ..\..\smapi\smapimvc.lib USER32.LIB delayimp.lib $(PERL_DIR)\lib\core\perl56.lib /link /opt:nowin98 /delayload:perl56.dll

default: all

{$(SRC_DIR)}.c$(OBJ):
